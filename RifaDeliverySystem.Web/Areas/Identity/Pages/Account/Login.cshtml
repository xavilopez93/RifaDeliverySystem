@page
@model RifaDeliverySystem.Web.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @Html.AntiForgeryToken()
             <partial name="_ValidationScriptsPartial" />
          
            <h4>Usa una cuenta existente</h4>
            <hr/>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" name="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" name="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="Input.RememberMe" name="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-primary">Iniciar sesión</button>

            @if (Model.ExternalLogins?.Count > 0)
            {
                <hr/>
                <div>
                    <p>O inicia sesión con:</p>
                    @foreach (var provider in Model.ExternalLogins)
                    {
                        <button type="submit"
                                class="btn btn-outline-secondary"
                                name="provider"
                                value="@provider.Name"
                                title="Iniciar sesión con @provider.DisplayName">
                            @provider.DisplayName
                        </button>
                    }
                </div>
            }

            <p>
                <a asp-page="ForgotPassword">¿Olvidaste tu contraseña?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse</a>
            </p>
        </form>
    </div>
</div>


