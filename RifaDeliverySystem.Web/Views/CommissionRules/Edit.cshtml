@model RifaDeliverySystem.Web.Models.CommissionRule
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Editar Regla de Comision";
}
@using System.Globalization
@{
    CultureInfo.CurrentCulture = new CultureInfo("es-PY");
    CultureInfo.CurrentUICulture = new CultureInfo("es-PY");
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
      <label asp-for="VendorType" class="form-label">Tipo</label>
      <input asp-for="VendorType" class="form-control" />
    </div>
    <div class="mb-3">
      <label asp-for="VendorClass" class="form-label">Clase</label>
      <input asp-for="VendorClass" class="form-control" />
    </div>
    <div class="mb-3">
      <label asp-for="MinCoupons" class="form-label">Cupon minimo</label>
      <input asp-for="MinCoupons" class="form-control" type="number" min="0" />
    </div>
    <div class="mb-3">
      <label asp-for="MaxCoupons" class="form-label">Cupon maximo</label>
      <input asp-for="MaxCoupons" class="form-control" type="number" />
      <small class="form-text text-muted">Dejar en blanco para que no haya limite</small>
    </div>
    <div class="mb-3">
      <label asp-for="Percentage" class="form-label">Porcentaje</label>
      <input asp-for="Percentage" class="form-control" type="number" step="0.01" />
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
