@model IEnumerable<RifaDeliverySystem.Web.Models.VendorCategory>
@{
    ViewData["Title"] = "Vendor Categories";
}
@using System.Globalization
@{
    CultureInfo.CurrentCulture = new CultureInfo("es-PY");
    CultureInfo.CurrentUICulture = new CultureInfo("es-PY");
}

<h1>@ViewData["Title"]</h1>
<p><a asp-action="Create" class="btn btn-primary">New Category</a></p>
<table class="table table-striped">
    <thead>
      <tr>
        <th>Type</th><th>Class</th><th>Base %</th><th></th>
      </tr>
    </thead>
    <tbody>
    @foreach(var cat in Model) {
      <tr>
        <td>@cat.Type</td>
        <td>@cat.Class</td>
        <td>@cat.CommissionRate.ToString("F2") %</td>
        <td>
          <a asp-action="Edit" asp-route-id="@cat.Id">Edit</a> |
          <a asp-action="Delete" asp-route-id="@cat.Id">Delete</a>
        </td>
      </tr>
    }
    </tbody>
</table>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
