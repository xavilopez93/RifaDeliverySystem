@model RifaDeliverySystem.Web.Models.VendorCategory
@{
    ViewData["Title"] = "Delete Vendor Category";
}
@using System.Globalization
@{
    CultureInfo.CurrentCulture = new CultureInfo("es-PY");
    CultureInfo.CurrentUICulture = new CultureInfo("es-PY");
}

<h1>@ViewData["Title"]</h1>
<p>Delete category <strong>@Model.Type – @Model.Class</strong>?</p>
<form asp-action="DeleteConfirmed" method="post">
  <input type="hidden" asp-for="Id" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
