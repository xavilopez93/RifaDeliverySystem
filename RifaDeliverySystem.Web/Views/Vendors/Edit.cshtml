@model RifaDeliverySystem.Web.Models.Vendor
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Editar Vendedor";  // o "Editar Vendedor"
    var types = ViewBag.Types as List<string> ?? new List<string>();
    var classes = ViewBag.Classes as List<string> ?? new List<string>();

}
@using System.Globalization
@{
    CultureInfo.CurrentCulture = new CultureInfo("es-PY");
    CultureInfo.CurrentUICulture = new CultureInfo("es-PY");
}

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />
    <!-- validación resumida -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label">Tipo</label>
        <select asp-for="Type" class="form-select"
                asp-items="new SelectList(types)"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Class" class="form-label">Clase</label>
        <select asp-for="Class" class="form-select"
                asp-items="new SelectList(classes)"></select>
        <span asp-validation-for="Class" class="text-danger"></span>
    </div>

      <!-- City & Department -->
    <div class="mb-3">
        <label asp-for="City" class="form-label">Ciudad</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

<div class="mb-3">
        <label asp-for="Department" class="form-label">Departamento</label>
        <input asp-for="Department" class="form-control" />
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
