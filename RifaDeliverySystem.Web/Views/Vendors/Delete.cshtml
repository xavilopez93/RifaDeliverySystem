@model RifaDeliverySystem.Web.Models.Vendor
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Delete Vendor";
}
@using System.Globalization
@{
    CultureInfo.CurrentCulture = new CultureInfo("es-PY");
    CultureInfo.CurrentUICulture = new CultureInfo("es-PY");
}

<h1>Delete Vendor</h1>
<p>Are you sure you want to delete vendor “@Model.Name”?</p>
<form asp-action="DeleteConfirmed" method="post">
  <input type="hidden" asp-for="Id" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}