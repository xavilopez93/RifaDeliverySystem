@model RifaDeliverySystem.Web.ViewModels.Reports.VendorSummaryFilter

@{
    ViewData["Title"] = "Resumen por Vendedor";
}

<h2>Resumen por Vendedor</h2>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <label>Clase</label>
        <select asp-for="SelectedClassId" asp-items="Model.ClassOptions" class="form-select">
            <option value="">-- Todas --</option>
        </select>
    </div>
    <div class="col-md-3">
        <label>Desde</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div class="col-md-3">
        <label>Hasta</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Filtrar</button>
    </div>
</form>

@if (Model.Results != null && Model.Results.Any())
{
    <div class="mb-3">
        <a asp-action="ExportSummaryByVendorPdf"
           asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
           asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
           asp-route-SelectedClassId="@Model.SelectedClassId"
           class="btn btn-danger me-2">Exportar PDF</a>

        <a asp-action="ExportSummaryByVendorExcel"
           asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
           asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
           asp-route-SelectedClassId="@Model.SelectedClassId"
           class="btn btn-success">Exportar Excel</a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Grupo</th>
                <th>Total Cupones</th>
                <th>Total Comisión</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Results)
            {
                <tr>
                    <td>@item.GroupName</td>
                    <td>@item.TotalSold</td>
                    <td>@item.TotalCommission.ToString("N0") Gs</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No se encontraron resultados con esos filtros.</p>
}
